<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

    <%- include('../includes/bootstrap.ejs') %>
    <%- include('../includes/font-awesome.ejs') %>

    <%- include('../includes/secure/settings-modal.ejs') %>
    <%- include('../includes/secure/people-modal.ejs') %>

    <link rel="stylesheet" href="/css/secure/home.css" />

</head>
<body>
    <main id="chat-wrapper">
        <ul id="navbar">
            <li class="nav-link-wrapper">
                <button type="btn" class="btn btn-info">
                    <img src="https://img.icons8.com/nolan/64/conference-call.png" width="45" height="45"/>
                </button>
            </li>
            <li class="nav-link-wrapper">
                <button type="btn" class="btn btn-outline-info" onclick="clearChat()">
                    <img src="https://img.icons8.com/nolan/64/erase.png"  width="45" height="45"/>
                </button>
            </li>
            <li class="nav-link-wrapper">
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#settings-modal">
                    <img src="https://img.icons8.com/nolan/64/apple-settings.png"  width="45" height="45"/>
                </button>
            </li>
            <li class="nav-link-wrapper">
                <button type="btn" class="btn btn-outline-info">
                    <img src="https://img.icons8.com/nolan/64/privacy.png" width="45" height="45"/>
                </button>
            </li>
            <li class="nav-link-wrapper">
                <a href="/login">
                    <button type="btn" class="btn btn-info" >
                        <img src="https://img.icons8.com/nolan/64/logout-rounded-left.png"  width="45" height="45"/>
                    </button>
                </a>
            </li>
        </ul>
        <div id="chat-area">
            <ul id="messages-wrapper">
                <% for (let i = 0; i < messages.length; i++) { %>
                    <li class="message-wrapper">
                        <span class="email"><%= messages[i].email %></span>
                        <span class="date"><%= date(new Date(), new Date(messages[i].createdAt)) %></span>
                        <p class="message"><%= filterMessage(messages[i].message) %></p>
                    </li>
                <% } %>
                <li></li>
            </ul>
            <form onsubmit="storeChat(); event.preventDefault()" id="message-form">
                <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Message" name="message" required id="message"/>
                <button type="submit" class="btn btn-success" id="send-chat-btn">Send</button>
            </form>
            <div class="alert alert-danger" id="server-error" role="alert">
                Something went wrong; your chat wasn't delivered! Please try again. 
            </div>
        </div>
    </main>
</body>
    <script defer>
        const storeChat = () => {
            const chat = document.getElementById('message');
            const serverError = document.getElementById('sever-error');

            fetch('/home', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                  },
                body: JSON.stringify(chat.value.trim()),
            }).then(() => {
                if (serverError) {
                    serverError.style.visibility = 'hidden';
                }

                chat.value = null;
                scrollToLastChat();
            }).catch((e) => {
                serverError.style.visibility = 'visible';
            });
        }
    </script>
    <script defer>
        const clearChat = () => {
            const messagesWrapper = document.getElementById('messages-wrapper');
            messagesWrapper.innerHTML = null;

            alert('Chat was cleared! But do not worry; once you refresh the page, past chats will re-render.');
        }

        const scrollToLastChat = () => {
            console.log(5);
            const messages = document.querySelectorAll('.message-wrapper');
            messages[messages.length - 1].scrollIntoView({ behavior: 'smooth' });
        }

        scrollToLastChat();
    </script>
</html>